<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Painel (Admin) — QG 007 Digital</title>
  <link rel="preconnect" href="https://www.gstatic.com" crossorigin>
  <style>
    :root{
      --bg:#0d0d0d; --bg2:#1a1a1a; --glass:rgba(255,255,255,.06);
      --borda:rgba(255,255,255,.12); --glow:rgba(0,255,136,.25);
      --verde:#00ff88; --txt:#eee; --muted:#bdbdbd;
      --sbw-closed:68px; --sbw-open:280px;
    }
    *{box-sizing:border-box}
    html,body{height:100%}
    body{
      margin:0; background:linear-gradient(135deg,var(--bg),var(--bg2));
      color:var(--txt); font-family:system-ui,-apple-system,Segoe UI,Roboto,Ubuntu,"Helvetica Neue",Arial;
      display:grid; grid-template-columns:var(--sbw-closed) 1fr; min-height:100%;
      transition:grid-template-columns .25s ease;
    }
    body.sidebar-open{ grid-template-columns:var(--sbw-open) 1fr; }

    /* Sidebar */
    .sidebar{
      position:sticky; top:0; height:100vh; padding:12px;
      background:#0f0f10; border-right:1px solid #222;
      display:flex; flex-direction:column; gap:12px; overflow:hidden;
    }
    .menu-toggle{
      width:44px; height:44px; border-radius:12px; border:1px solid var(--borda);
      background:#000; color:#fff; display:grid; place-items:center; cursor:pointer;
      transition:transform .08s ease, background .2s ease;
    }
    .menu-toggle:hover{ transform:translateY(-1px); background:#0b0b0b }

    .logo{
      margin-top:6px; padding:8px 14px; border-radius:12px; border:1px solid var(--borda);
      background:#000; font-weight:900; letter-spacing:.5px; text-transform:uppercase;
      white-space:nowrap; overflow:hidden; text-overflow:ellipsis;
      opacity:0; transform:translateX(-6px); transition:opacity .2s, transform .2s;
    }
    body.sidebar-open .logo{ opacity:1; transform:none; }

    .pill-list{
      margin-top:6px; display:flex; flex-direction:column; gap:10px;
      opacity:0; transform:translateX(-8px); transition:opacity .2s, transform .2s, max-height .25s ease;
      max-height:0;
    }
    body.sidebar-open .pill-list{ opacity:1; transform:none; max-height:1000px; }

    .pill{
      background:#151515; border:1px solid var(--borda); color:#fff;
      padding:12px 14px; border-radius:14px; display:flex; align-items:center; justify-content:space-between;
      gap:10px; cursor:pointer; transition:transform .08s ease, background .2s ease, box-shadow .2s ease;
    }
    .pill:hover{ transform:translateY(-1px); background:#181818; box-shadow:0 0 10px rgba(255,255,255,.04) }
    .pill .label{ font-weight:700 }
    .caret{ transition:transform .2s ease }

    .submenu{
      border-left:2px solid rgba(255,255,255,.08);
      margin-left:8px; padding-left:8px; display:none;
    }
    .submenu a{
      display:block; color:#fff; text-decoration:none; padding:10px 12px; border-radius:10px;
      border:1px solid rgba(255,255,255,.08); background:rgba(255,255,255,.04);
      margin-top:8px; transition:background .2s, transform .08s;
    }
    .submenu a:hover{ background:rgba(255,255,255,.08); transform:translateX(2px) }

    /* UI do Adicionar (igual area-membro) */
    .add-wrap{ margin-left:8px; padding-left:8px; display:none; }
    .add-box{
      display:flex; gap:8px; align-items:center; margin-top:8px;
      background:rgba(255,255,255,.04); border:1px solid rgba(255,255,255,.12);
      border-radius:12px; padding:10px;
    }
    .add-box input{
      flex:1; padding:10px 12px; border-radius:10px; border:1px solid var(--borda);
      background:rgba(255,255,255,.08); color:#fff; outline:none;
    }
    .btn{ border:none; border-radius:10px; padding:10px 12px; font-weight:800; cursor:pointer; }
    .btn-ok{ background:var(--verde); color:#000 }
    .btn-cancel{ background:#444; color:#fff }

    .side-foot{margin-top:auto; font-size:12px; color:#aaa}

    /* Main */
    .main{display:grid; grid-template-rows:60px 1fr; min-height:100vh}
    .topbar{
      display:flex; align-items:center; justify-content:flex-end; gap:14px;
      padding:0 18px; background:#000; border-bottom:1px solid #222; position:sticky; top:0; z-index:5;
    }
    .link{color:#fff; text-decoration:none; border-bottom:1px solid #fff; padding-bottom:2px}
    .btn-link{background:none; border:none; color:#fff; cursor:pointer; border-bottom:1px solid #fff; padding:0 0 2px}

    .wrap{padding:24px; display:grid; gap:18px}

    .center-card{
      backdrop-filter:blur(14px);
      background:var(--glass);
      border:1px solid var(--borda);
      box-shadow:0 0 20px var(--glow);
      border-radius:20px; padding:22px;
    }
    .top-inline{ display:flex; align-items:center; gap:12px; margin-bottom:10px; }
    .badge-logo{
      padding:8px 14px; border-radius:12px; border:1px solid var(--borda);
      background:#000; font-weight:900; letter-spacing:.5px; text-transform:uppercase;
    }
    .welcome{ margin:4px 0 16px; font-size:26px; color:var(--verde) }
    .hello{ margin:-8px 0 10px; color:var(--muted); font-size:14px }

    .grid{ display:grid; gap:16px; grid-template-columns:1fr; }
    @media (min-width: 720px){ .grid{ grid-template-columns:1fr 1fr; } }
    .card{
      display:flex; flex-direction:column; gap:10px;
      backdrop-filter:blur(10px); background:rgba(255,255,255,.05);
      border:1px solid var(--borda); border-radius:14px; padding:18px;
      transition:transform .08s ease, box-shadow .25s ease, background .25s ease;
    }
    .card:hover{ transform:translateY(-2px); box-shadow:0 0 16px var(--glow); background:rgba(255,255,255,.06) }
    .card h3{margin:0; color:#fff}
    .card p{margin:0; color:#cfcfcf; font-size:14px}
    .card a.btn{
      margin-top:8px; align-self:flex-start; padding:10px 14px; border-radius:10px;
      background:var(--verde); color:#000; font-weight:800; text-decoration:none; transition:background .25s ease;
    }
    .card a.btn:hover{ background:#00e07a }
    .warn{ color:#f8d7da; font-size:14px }
  </style>
</head>
<body>
  <!-- SIDEBAR -->
  <aside class="sidebar">
    <button id="btnToggle" class="menu-toggle" title="Abrir menu" type="button">
      <svg width="22" height="22" viewBox="0 0 24 24" fill="none" aria-hidden="true">
        <rect x="3" y="3" width="18" height="18" rx="4" stroke="white" stroke-width="2"/>
        <path d="M7 9h10M7 12h10M7 15h10" stroke="white" stroke-width="2" stroke-linecap="round"/>
      </svg>
    </button>

    <div class="logo">Painel — QG 007</div>

    <div class="pill-list" id="pillList">
      

      <!-- Área de Membro -->
      <button class="pill" id="btnArea" type="button">
        <span class="label">Área de Membro</span>
        <span class="caret">⌄</span>
      </button>
      <div class="submenu" id="subArea">
        <a href="area-membro/index.html">Categorias & Menu</a>
        <a href="../../area-membros.html">Ver como membro</a>
      </div>

      <!-- Conta Dark -->
      <button class="pill" id="btnDark" type="button">
        <span class="label">Conta Dark</span>
        <span class="caret">⌄</span>
      </button>
      <div class="submenu" id="subDark">
        <a href="../conta-dark/home-dark/index.html" onclick="event.preventDefault();alert('Stub: crie admin/conta-dark/home-dark/index.html');">Gerenciar (stub)</a>
        <a href="../../conta-dark/home-dark/index.html">Ver página pública</a>
      </div>

      <!-- Chat IA -->
      <button class="pill" id="btnChat" type="button">
        <span class="label">Chat IA</span>
        <span class="caret">⌄</span>
      </button>
      <div class="submenu" id="subChat">
        <a href="chat-ia/index.html">Coleções / Links</a>
        <a href="../../chats.html">Ver página pública</a>
      </div>

      <!-- Geral -->
      <button class="pill" id="btnGeral" type="button">
        <span class="label">Geral</span>
        <span class="caret">⌄</span>
      </button>
      <div class="submenu" id="subGeral">
        <a href="geral/index.html">Textos / Conteúdos</a>
        <a href="../../ferramentas.html">Ferramentas</a>
        <a href="../../arquivos.html">Arquivos</a>
      </div>

      <!-- NOVO: Adicionar Categoria (igual área-membro – PASSO 1: só UI) -->
      <button class="pill" id="pillAdd" type="button">
        <span class="label">Adicionar Categoria</span>
        <span class="caret">＋</span>
      </button>
      <div class="add-wrap" id="addWrap">
        <div class="add-box">
          <input id="inputCategoria" type="text" placeholder="Nome da nova categoria">
          <button class="btn btn-ok" id="btnAddOk" disabled>Adicionar</button>
          <button class="btn btn-cancel" id="btnAddCancel">Cancelar</button>
        </div>
        <p style="font-size:12px;color:#aaa;margin:6px 2px 0;">
          *Somente interface por enquanto. No próximo passo vamos salvar e exibir no menu.
        </p>
      </div>
    </div>

    <div class="side-foot">admin • v1.0</div>
  </aside>

  <!-- MAIN -->
  <main class="main">
    <div class="topbar">
      <a class="link" href="../../area-membros.html">Área de Membro</a>
      <button id="btnSair" class="btn-link" type="button">Sair</button>
    </div>

    <div class="wrap">
      <section class="center-card">
        <div class="top-inline">
          <div class="badge-logo">QG 007</div>
        </div>
        <h2 class="welcome">Painel de Gerenciamento</h2>
        <p class="hello" id="helloUser"></p>
        <p class="warn" id="onlyAdmin" style="display:none">Acesso negado: este painel é exclusivo para administradores.</p>
      </section>

      <section class="grid">
        <article class="card">
          <h3>Área de Membro</h3>
          <p>Gerenciar categorias do menu lateral e estrutura visual.</p>
          <a class="btn" href="area-membro/index.html">Abrir Gerenciamento</a>
        </article>

        <article class="card">
          <h3>Conta Dark</h3>
          <p>Configurações de fluxos (Instagram, downloads, edição, agendador).</p>
          <a class="btn" href="../conta-dark/home-dark/index.html" onclick="event.preventDefault();alert('Stub: crie admin/conta-dark/home-dark/index.html');">Abrir (stub)</a>
        </article>

        <article class="card">
          <h3>Chat IA</h3>
          <p>Links / coleções de chats personalizados e permissões.</p>
          <a class="btn" href="chat-ia/index.html">Abrir Gerenciamento</a>
        </article>

        <article class="card">
          <h3>Geral</h3>
          <p>Textos do site, componentes compartilhados e integrações.</p>
          <a class="btn" href="geral/index.html">Abrir Gerenciamento</a>
        </article>
      </section>
    </div>
  </main>

  <script type="module">
    // UI básico
    const body = document.body;
    document.getElementById('btnToggle').addEventListener('click', ()=> body.classList.toggle('sidebar-open'));
    document.addEventListener('click', (e)=>{
      if (!body.classList.contains('sidebar-open')) return;
      if (!e.target.closest('.sidebar')) body.classList.remove('sidebar-open');
    });

    // Abre/fecha submenus
    function bindSub(btnId, subId){
      const btn = document.getElementById(btnId);
      const sub = document.getElementById(subId);
      btn.addEventListener('click', ()=>{
        const open = sub.style.display === 'block';
        sub.style.display = open ? 'none' : 'block';
        const caret = btn.querySelector('.caret');
        if (caret) caret.style.transform = open ? 'rotate(0)' : 'rotate(180deg)';
      });
    }
    bindSub('btnArea','subArea');
    bindSub('btnDark','subDark');
    bindSub('btnChat','subChat');
    bindSub('btnGeral','subGeral');

    // Navegação rápida
    document.getElementById('btnDashboard').addEventListener('click', ()=> window.scrollTo({top:0,behavior:'smooth'}));

    // PASSO 1 — Somente UI do "Adicionar Categoria" (igual area-membro)
    const pillAdd = document.getElementById('pillAdd');
    const addWrap = document.getElementById('addWrap');
    const inputCat = document.getElementById('inputCategoria');
    const btnAddOk = document.getElementById('btnAddOk');
    const btnAddCancel = document.getElementById('btnAddCancel');

    pillAdd.addEventListener('click', ()=>{
      const show = addWrap.style.display === 'block';
      addWrap.style.display = show ? 'none' : 'block';
      inputCat.value = '';
      btnAddOk.disabled = true; // ainda sem ação de salvar
    });
    inputCat.addEventListener('input', ()=>{
      btnAddOk.disabled = (inputCat.value.trim().length === 0);
    });
    btnAddCancel.addEventListener('click', ()=>{
      addWrap.style.display = 'none';
      inputCat.value = '';
      btnAddOk.disabled = true;
    });

    // Firebase Auth + gate admin
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.12.2/firebase-app.js";
    import { getAuth, signOut, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/10.12.2/firebase-auth.js";

    const firebaseConfig = {
      apiKey: "AIzaSyD3qLC0mq0snYDVjgcMqlxpotgALTHd0uY",
      authDomain: "qg007-b890a.firebaseapp.com",
      projectId: "qg007-b890a",
      storageBucket: "qg007-b890a.firebasestorage.app",
      messagingSenderId: "230480486221",
      appId: "1:230480486221:web:a232dcd4d9225ab254e104"
    };
    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);

    const ADMIN_EMAILS = [
      "admin@007digital.com.br",
      "primeiro.dark.ofc@gmail.com"
    ];

    const $ = (id)=>document.getElementById(id);

    onAuthStateChanged(auth, (user)=>{
      if(!user){ location.href = "../../login.html"; return; }
      $("helloUser").textContent = user.displayName
        ? `Olá, ${user.displayName}!`
        : `Olá, ${user.email}!`;

      const isAdmin = !!user.email && ADMIN_EMAILS.includes(user.email.toLowerCase());
      if(!isAdmin){
        // mostra aviso e redireciona depois de 1.2s
        const warn = document.getElementById('onlyAdmin');
        if (warn) warn.style.display = 'block';
        setTimeout(()=> location.href = "../../area-membros.html", 1200);
      }
    });

    document.getElementById('btnSair').addEventListener('click', ()=>{
      signOut(auth).then(()=> location.href = "../../login.html");
    });
  </script>
</body>
</html>
